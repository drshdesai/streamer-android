<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/aboutus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <GridLayout
        android:rowCount="5"
        android:columnCount="3"
        android:id="@+id/nameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/aboutUs"
        android:layout_centerHorizontal="true">

        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Nirav Desai"
            android:id="@+id/niravText"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120860116002"
            android:id="@+id/niravEnroll" />

        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Keval Patel"
            android:id="@+id/kevalText"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120860116003"
            android:id="@+id/kevalEnroll" />

        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Darsh Desai"
            android:id="@+id/darshText"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120860116016"
            android:id="@+id/darshEnroll" />

        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Irfan Ajmeri"
            android:id="@+id/irfanText"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="@dimen/nameSize"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120860116020"
            android:id="@+id/irfanEnroll" />
    </GridLayout>

</RelativeLayout>